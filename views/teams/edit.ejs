<div>
  <h2>Create a Edit Team</h2>
  <form action="/teams/<%= team.name %>" id="edit-form">
    <div class="form-group">
      <label for="teamName">Team Name</label>
      <input  required type="text" class="form-control" name="name" id="teamName" value="<%=team.name%>">
    </div>
    <div class="form-group">
      <label for="teamMembers">Members</label>
      <input required type="text" class="form-control" name="members" id="teamMembers" value="<%=team.members%>">
    </div>
    <input class="btn btn-primary" type="submit" />
  </form>
  <hr />
</div>